# Use Nix Flakes for development
if command -v nix &>/dev/null && nix flake --help &>/dev/null; then
  use flake
elif command -v nix-shell &>/dev/null; then
  use nix
else
  echo "WARNING: Neither Nix Flakes nor nix-shell are available"
  echo "Please install Nix: https://nixos.org/download.html"
fi
